<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karlos.google.MainActivity">

    <View
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/azulEscuro"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WallTic"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="@color/branco"
        android:textStyle="bold"
        android:fontFamily="cursive"

        />


    <View
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/amarelo"
        android:layout_below="@id/titulo"
        android:layout_marginTop="5dp"
        />


    <EditText
        android:id="@+id/pesquisar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/carros"
        android:hint="Pesquisar"
        android:textSize="20sp"
        android:inputType="text"

        />




    <Button
        android:id="@+id/carros"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/carros2"
        android:layout_below="@+id/barra"
        android:layout_marginTop="10dp"
        android:text="Carros"
        android:textSize="25dp"
        android:gravity="left"
        android:textColor="@color/branco"
        android:textAllCaps="false"

        />


    <Button
        android:id="@+id/motos"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="@drawable/motos"
        android:layout_below="@+id/barra"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="Motos"
        android:textSize="25dp"
        android:textColor="@color/branco"
        android:gravity="right"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/agua"
        android:layout_width="95dp"
        android:layout_height="180dp"
        android:background="@drawable/agua"
        android:layout_below="@+id/carros"
        android:layout_marginTop="10dp"
        android:text="Água"
        android:textSize="25dp"
        android:textColor="@color/branco"
        android:gravity="left"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/flores"
        android:layout_width="95dp"
        android:layout_height="180dp"
        android:background="@drawable/flores"
        android:layout_below="@+id/carros"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/agua"
        android:layout_marginLeft="10dp"
        android:text="Flores"
        android:textSize="25dp"
        android:textColor="@color/branco"
        android:gravity="top"
        android:textAllCaps="false"
        android:textAlignment="center"
        />


    <Button
        android:id="@+id/ceu"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/ceu"
        android:layout_below="@+id/motos"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="Céu"
        android:textSize="25dp"
        android:textColor="@color/branco"
        android:gravity="right"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/natureza"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/natureza"
        android:layout_below="@+id/ceu"
        android:layout_marginTop="10dp"
        android:text="Natureza"
        android:textSize="25dp"
        android:textColor="@color/branco"
        android:gravity="left"
        android:textAllCaps="false"
        />


    <Button
    android:id="@+id/remover"
    android:layout_width="150dp"
    android:layout_height="30dp"
    android:layout_below="@+id/natureza"
    android:background="@color/azulEscuro"
    android:layout_marginTop="15dp"
    android:text="Wallpaper Original"
    android:textSize="17sp"
    android:textColor="@color/branco"
    android:textAllCaps="false"
    android:textAlignment="center"
    />

    <Button
    android:id="@+id/sair"
    android:layout_width="150dp"
    android:layout_height="30dp"
    android:layout_below="@+id/natureza"
    android:background="@color/vermelhoClaro"
    android:layout_alignParentRight="true"
    android:layout_marginTop="15dp"
    android:text="Sair"
    android:textSize="20sp"
    android:textColor="@color/branco"
    android:textAllCaps="false"
    android:textAlignment="center"
    />



</RelativeLayout>



